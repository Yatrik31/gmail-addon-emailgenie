      ]
    },
    "gmail": {
      "contextualTriggers": [
        {
          "unconditional": {},
          "onTriggerFunction": "onGmailMessageOpen"
        }
      ],
      "primaryColor": "#aed964",
      "secondaryColor": "#D3E3FD",
      "universalActions": [
        {
          "text": "Open ReplyGenie",
          "runFunction": "showSidebar"
        }
      ]
    }
  }
